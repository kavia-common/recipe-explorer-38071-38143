# Safe CI defaults to avoid exit code 137 (OOM) and ensure health endpoints are available
# Copy this file to .env before npm start in CI.

# Networking
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
BROWSER=none
WDS_SOCKET_PORT=0
CHOKIDAR_USEPOLLING=false

# Memory and performance
# Cap Node memory to avoid OOM in constrained runners
NODE_OPTIONS=--max-old-space-size=256
# Disable source maps to reduce memory footprint
REACT_APP_ENABLE_SOURCE_MAPS=false
GENERATE_SOURCEMAP=false
# Disable telemetry/noise if present
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_NODE_ENV=development

# Health endpoint (zero-bundle)
# Served statically from public/healthz.html or /healthz by the launcher/static server
REACT_APP_HEALTHCHECK_PATH=/healthz.html

# App URLs (optional, do not break startup if unset)
REACT_APP_API_BASE=
REACT_APP_BACKEND_URL=
REACT_APP_FRONTEND_URL=
REACT_APP_WS_URL=

# Other flags
REACT_APP_TRUST_PROXY=true
REACT_APP_LOG_LEVEL=info
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=0
