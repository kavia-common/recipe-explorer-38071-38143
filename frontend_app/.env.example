# PUBLIC_INTERFACE
# This file documents safe defaults to avoid exit code 137 (OOM) in CI and containers.
# Copy to .env to use: cp .env.example .env

# Bind host/port for containers
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000

# Stability and low-memory defaults
CI=true
BROWSER=none
CHOKIDAR_USEPOLLING=false
WDS_SOCKET_PORT=0
# Disable source maps to reduce memory footprint
REACT_APP_ENABLE_SOURCE_MAPS=false
GENERATE_SOURCEMAP=false

# Cap Node.js memory to avoid OOM (exit 137)
NODE_OPTIONS=--max-old-space-size=256

# Health endpoint path (served statically)
REACT_APP_HEALTHCHECK_PATH=/healthz.html

# Optional: Force static-only zero-bundle start for ultra-tight memory environments
# CI_STATIC_ONLY=1

# Project URLs (adjust per environment)
REACT_APP_API_BASE=
REACT_APP_BACKEND_URL=
REACT_APP_FRONTEND_URL=
REACT_APP_WS_URL=
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_TRUST_PROXY=true
REACT_APP_LOG_LEVEL=info
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=false
