# PUBLIC_INTERFACE
# CI/Dev safe defaults for low-memory environments (prevents exit code 137/OOM)
# Copy this file to .env before starting:  cp .env.example .env

# Networking
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
BROWSER=none
WDS_SOCKET_PORT=0

# Stability
CI=true
CHOKIDAR_USEPOLLING=false

# Memory and source maps
# Node memory cap helps avoid OOM in tight CI runners
NODE_OPTIONS=--max-old-space-size=256
# Disable source maps to reduce memory usage
REACT_APP_ENABLE_SOURCE_MAPS=false
GENERATE_SOURCEMAP=false

# Health endpoint path; static and available before bundling
REACT_APP_HEALTHCHECK_PATH=/healthz.html

# Optional: Force static-only mode (zero-bundle) for extreme constraints
# CI_STATIC_ONLY=1

# App environment variables (placeholders; not used to connect to backend in this template)
REACT_APP_API_BASE=
REACT_APP_BACKEND_URL=
REACT_APP_FRONTEND_URL=
REACT_APP_WS_URL=
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_TRUST_PROXY=1
REACT_APP_LOG_LEVEL=info
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=0
