# PUBLIC_INTERFACE
# Example environment configuration for the frontend_app (React)
# Copy this to .env and adjust as needed. Do NOT commit secrets.
#
# Purpose:
# - Stabilize dev server in CI/containers and avoid exit code 137 (OOM)
# - Disable sourcemaps to reduce memory
# - Avoid opening browser
# - Bind to 0.0.0.0 for container access
# - Avoid websocket port negotiation issues
# - Cap Node's memory usage

# Server bind/port
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000

# Stability flags
BROWSER=none
CHOKIDAR_USEPOLLING=false
WDS_SOCKET_PORT=0
GENERATE_SOURCEMAP=false
REACT_APP_ENABLE_SOURCE_MAPS=false
NODE_OPTIONS=--max-old-space-size=256

# Node env
REACT_APP_NODE_ENV=development
CI=true

# Service URLs (sample)
REACT_APP_API_BASE=http://localhost:4000
REACT_APP_BACKEND_URL=http://localhost:4000
REACT_APP_FRONTEND_URL=http://localhost:3000
REACT_APP_WS_URL=ws://localhost:4000

# Misc app flags
REACT_APP_TRUST_PROXY=true
REACT_APP_LOG_LEVEL=info
REACT_APP_HEALTHCHECK_PATH=/healthz.html
REACT_APP_FEATURE_FLAGS={}
REACT_APP_EXPERIMENTS_ENABLED=false

# Next telemetry (not used here but kept for compatibility)
REACT_APP_NEXT_TELEMETRY_DISABLED=1
