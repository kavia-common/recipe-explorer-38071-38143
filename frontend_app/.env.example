# PUBLIC_INTERFACE
# Example environment for stable low-memory startup in CI and containers.
# Copy this file to .env to apply these defaults.

# Server binding
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000

# Memory and source maps
# Keep Node memory capped to avoid OOM (exit code 137)
NODE_OPTIONS=--max-old-space-size=256
# Disable source maps to reduce memory usage in dev and build
REACT_APP_ENABLE_SOURCE_MAPS=false
GENERATE_SOURCEMAP=false

# Dev server stability in containers
BROWSER=none
CHOKIDAR_USEPOLLING=false
WDS_SOCKET_PORT=0

# Healthcheck endpoint (served statically; zero-bundle)
REACT_APP_HEALTHCHECK_PATH=/healthz.html

# Optional runtime URLs (placeholders)
REACT_APP_API_BASE=
REACT_APP_BACKEND_URL=
REACT_APP_FRONTEND_URL=
REACT_APP_WS_URL=

# Feature flags / diagnostics
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_TRUST_PROXY=true
REACT_APP_LOG_LEVEL=info
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=false
