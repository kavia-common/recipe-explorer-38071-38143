# PUBLIC INTERFACE
# Environment variables used by the frontend_app container.
# Copy to .env and adjust as needed. Do NOT commit a real .env with secrets.

# Server binding and port
REACT_APP_PORT=3000

# Base URLs (adjust per environment)
REACT_APP_API_BASE=http://localhost:4000
REACT_APP_BACKEND_URL=http://localhost:4000
REACT_APP_FRONTEND_URL=http://localhost:3000
REACT_APP_WS_URL=ws://localhost:3000

# Environment flags
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_TRUST_PROXY=true
REACT_APP_LOG_LEVEL=info
REACT_APP_HEALTHCHECK_PATH=/healthz
REACT_APP_FEATURE_FLAGS={}
REACT_APP_EXPERIMENTS_ENABLED=false

# Build/dev flags
# Disable source maps in CI to reduce memory usage
REACT_APP_ENABLE_SOURCE_MAPS=false

# Recommended for CI runners with low memory:
# Export these in your CI job, or use npm run start:ci / start:lowmem / start:ultralowmem scripts.
# WDS_SOCKET_PORT=0
# BROWSER=none
# CHOKIDAR_USEPOLLING=false
# NODE_OPTIONS=--max-old-space-size=256
