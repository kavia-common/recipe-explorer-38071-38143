# PUBLIC_INTERFACE
# Example environment configuration for stable dev server in CI/containers
# Copy this file to .env and adjust values as needed.

# Bind host/port for container access
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000

# Disable browser auto-open and polling to reduce CPU/memory
BROWSER=none
CHOKIDAR_USEPOLLING=false

# Avoid websocket port negotiation issues in containers
WDS_SOCKET_PORT=0

# Strongly recommended to keep source maps disabled in CI to avoid OOM (Exit 137)
REACT_APP_ENABLE_SOURCE_MAPS=false
GENERATE_SOURCEMAP=false

# Cap Node.js memory to avoid OOM Killer
NODE_OPTIONS=--max-old-space-size=256

# Optional app envs
REACT_APP_API_BASE=
REACT_APP_BACKEND_URL=
REACT_APP_FRONTEND_URL=
REACT_APP_WS_URL=
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_TRUST_PROXY=true
REACT_APP_LOG_LEVEL=info
REACT_APP_HEALTHCHECK_PATH=/healthz.html
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=false
