# PUBLIC_INTERFACE
# Example environment variables for frontend_app (React)
# Copy to .env and adjust as needed. Do not commit real secrets.

# App URLs
REACT_APP_API_BASE=http://localhost:4000/api
REACT_APP_BACKEND_URL=http://localhost:4000
REACT_APP_FRONTEND_URL=http://localhost:3000
REACT_APP_WS_URL=ws://localhost:4000

# Environment / telemetry flags
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1

# Performance and stability (recommended for CI to avoid exit 137/OOM)
REACT_APP_ENABLE_SOURCE_MAPS=false
REACT_APP_PORT=3000
REACT_APP_TRUST_PROXY=false
REACT_APP_LOG_LEVEL=info
REACT_APP_HEALTHCHECK_PATH=/healthz

# Feature gates
REACT_APP_FEATURE_FLAGS={}
REACT_APP_EXPERIMENTS_ENABLED=false

# Node memory cap (CI-friendly)
# You may also export this in your CI job instead of here.
NODE_OPTIONS=--max-old-space-size=256
