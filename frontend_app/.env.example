# Recommended env vars for stable startup in CI/containers

# Do not auto open browser in CI
BROWSER=none

# Avoid unnecessary file watching overhead in containers
CHOKIDAR_USEPOLLING=false

# Workaround for websocket port negotiation in containers
WDS_SOCKET_PORT=0

# Cap Node memory to avoid exit code 137 (OOM)
NODE_OPTIONS=--max-old-space-size=256

# Disable source maps to reduce memory
REACT_APP_ENABLE_SOURCE_MAPS=false

# Optional port override
REACT_APP_PORT=3000

# App URLs (set by orchestrator as needed)
REACT_APP_API_BASE=
REACT_APP_BACKEND_URL=
REACT_APP_FRONTEND_URL=
REACT_APP_WS_URL=

# Additional flags
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_TRUST_PROXY=true
REACT_APP_LOG_LEVEL=info
REACT_APP_HEALTHCHECK_PATH=/healthz.html
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=false
