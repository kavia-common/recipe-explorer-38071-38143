# Memory & stability defaults for CI and containers
# PUBLIC_INTERFACE
# Copy this file to .env to apply safe defaults locally or in CI.

# Bind host/port
HOST=0.0.0.0
REACT_APP_PORT=3000

# Disable opening browser, reduce file watching overhead, avoid websocket issues
BROWSER=none
CHOKIDAR_USEPOLLING=false
WDS_SOCKET_PORT=0

# Keep memory low
NODE_OPTIONS=--max-old-space-size=256
REACT_APP_ENABLE_SOURCE_MAPS=false

# Health endpoint path (served statically)
REACT_APP_HEALTHCHECK_PATH=/healthz.html

# App URLs (adjust per environment)
REACT_APP_API_BASE=http://localhost:3001
REACT_APP_BACKEND_URL=http://localhost:3001
REACT_APP_FRONTEND_URL=http://localhost:3000
REACT_APP_WS_URL=ws://localhost:3001

# Node env and logging
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_TRUST_PROXY=true
REACT_APP_LOG_LEVEL=info

# Feature flags
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=false
