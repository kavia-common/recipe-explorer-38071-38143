# PUBLIC_INTERFACE
# Example environment variables for stable CI/dev runs (low memory, container-friendly)
# Copy this file to `.env` and adjust values as needed.

# Server binding
HOST=0.0.0.0
REACT_APP_PORT=3000
PORT=3000

# Stability flags
BROWSER=none
CHOKIDAR_USEPOLLING=false
WDS_SOCKET_PORT=0

# Memory caps to avoid exit 137 (OOM)
NODE_OPTIONS=--max-old-space-size=256

# Disable source maps to reduce memory usage in dev
REACT_APP_ENABLE_SOURCE_MAPS=false
GENERATE_SOURCEMAP=false

# Healthcheck path (static, zero-bundle)
REACT_APP_HEALTHCHECK_PATH=/healthz.html

# Optional logging level
REACT_APP_LOG_LEVEL=info

# Feature flags placeholders
REACT_APP_FEATURE_FLAGS={}
REACT_APP_EXPERIMENTS_ENABLED=false

# External URLs (placeholders)
REACT_APP_API_BASE=
REACT_APP_BACKEND_URL=
REACT_APP_FRONTEND_URL=
REACT_APP_WS_URL=
REACT_APP_NODE_ENV=development

# Next telemetry (not used here, for compatibility)
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_TRUST_PROXY=true
REACT_APP_ENABLE_SOURCE_MAPS=false
