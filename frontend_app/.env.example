# Example environment variables for frontend_app (React)
# Copy to .env and adjust as needed.

# PUBLIC_INTERFACE
# REACT dev server port; CI uses 3000 unless overridden by orchestrator
REACT_APP_PORT=3000

# Base URLs
REACT_APP_API_BASE=http://localhost:8000
REACT_APP_BACKEND_URL=http://localhost:8000
REACT_APP_FRONTEND_URL=http://localhost:3000
REACT_APP_WS_URL=ws://localhost:8000/ws

# Runtime flags
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
# Disable source maps to reduce memory usage in CI and avoid Exit 137
REACT_APP_ENABLE_SOURCE_MAPS=false
REACT_APP_TRUST_PROXY=true
REACT_APP_LOG_LEVEL=info
REACT_APP_HEALTHCHECK_PATH=/healthz
REACT_APP_FEATURE_FLAGS={}
REACT_APP_EXPERIMENTS_ENABLED=false

# Node/process stability
# For CI runners, keep memory capped to avoid OOM.
NODE_OPTIONS=--max-old-space-size=256
BROWSER=none
WDS_SOCKET_PORT=0
CHOKIDAR_USEPOLLING=false
GENERATE_SOURCEMAP=false
