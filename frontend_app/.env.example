# Example environment configuration for frontend_app
# Copy to ".env" and adjust as needed. Do NOT commit your real .env.

# PUBLIC_INTERFACE
# REACT app URLs
REACT_APP_API_BASE=https://api.example.com
REACT_APP_BACKEND_URL=http://localhost:8080
REACT_APP_FRONTEND_URL=http://localhost:3000
REACT_APP_WS_URL=ws://localhost:3000

# App environment
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1

# Stability flags (recommended for CI/containers)
REACT_APP_ENABLE_SOURCE_MAPS=false
REACT_APP_PORT=3000
REACT_APP_TRUST_PROXY=true
REACT_APP_LOG_LEVEL=info
REACT_APP_HEALTHCHECK_PATH=/healthz

# Feature toggles
REACT_APP_FEATURE_FLAGS={}
REACT_APP_EXPERIMENTS_ENABLED=false

# Node memory cap to avoid OOM (Exit 137) in CI
NODE_OPTIONS=--max-old-space-size=256

# Dev server ergonomics for containers/CI
BROWSER=none
HOST=0.0.0.0
WDS_SOCKET_PORT=0
CHOKIDAR_USEPOLLING=false
