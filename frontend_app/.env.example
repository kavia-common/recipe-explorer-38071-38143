# PUBLIC_INTERFACE
# Sample environment variables for stable dev server in CI/containers

# Force non-interactive behavior and cap memory to avoid exit 137 (OOM)
CI=true
BROWSER=none
CHOKIDAR_USEPOLLING=false
WDS_SOCKET_PORT=0

# Node memory cap (MB)
NODE_OPTIONS=--max-old-space-size=256

# Disable source maps to reduce memory/CPU
REACT_APP_ENABLE_SOURCE_MAPS=false
GENERATE_SOURCEMAP=false

# Bind/port for container access
REACT_APP_PORT=3000
PORT=3000
HOST=0.0.0.0

# Health path (static, zero-bundle)
REACT_APP_HEALTHCHECK_PATH=/healthz.html

# Optional URLs (examples; set per environment)
REACT_APP_API_BASE=
REACT_APP_BACKEND_URL=
REACT_APP_FRONTEND_URL=
REACT_APP_WS_URL=

# Other toggles
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_TRUST_PROXY=true
REACT_APP_LOG_LEVEL=info
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=false
