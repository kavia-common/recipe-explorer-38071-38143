# PUBLIC_INTERFACE
# Recommended environment variables for stable startup in CI/containers.
# Copy this file to .env and adjust as needed.

# Server and network
HOST=0.0.0.0
REACT_APP_PORT=3000
PORT=3000
BROWSER=none
CHOKIDAR_USEPOLLING=false
WDS_SOCKET_PORT=0

# Memory and build flags
# Cap Node's memory to avoid exit code 137 (OOM)
NODE_OPTIONS=--max-old-space-size=256
# Disable source maps to reduce memory footprint
REACT_APP_ENABLE_SOURCE_MAPS=false
GENERATE_SOURCEMAP=false
CI=true

# Healthcheck path (static, zero-bundle)
REACT_APP_HEALTHCHECK_PATH=/healthz.html

# Optional app URLs (placeholders)
REACT_APP_API_BASE=
REACT_APP_BACKEND_URL=
REACT_APP_FRONTEND_URL=
REACT_APP_WS_URL=
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=true
REACT_APP_TRUST_PROXY=true
REACT_APP_LOG_LEVEL=info
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=false
