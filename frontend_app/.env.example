# PUBLIC_INTERFACE
# Sample environment for CI-friendly, low-memory startup to avoid exit code 137 (OOM)
# Copy this file to .env in CI or local dev with tight resources.

# Bind host/port for container access
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000

# Disable opening a browser in CI and avoid webpack socket issues
BROWSER=none
WDS_SOCKET_PORT=0
CHOKIDAR_USEPOLLING=false

# Keep node memory low to avoid OOM
NODE_OPTIONS=--max-old-space-size=256

# Disable source maps to reduce memory usage
REACT_APP_ENABLE_SOURCE_MAPS=false
GENERATE_SOURCEMAP=false

# Healthcheck path (served statically; zero-bundle)
REACT_APP_HEALTHCHECK_PATH=/healthz.html

# Optional feature flags for app (safe defaults)
REACT_APP_API_BASE=
REACT_APP_BACKEND_URL=
REACT_APP_FRONTEND_URL=
REACT_APP_WS_URL=
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_TRUST_PROXY=true
REACT_APP_LOG_LEVEL=info
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=false
