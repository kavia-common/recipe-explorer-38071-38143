# CI-safe defaults to prevent OOM (exit 137) and ensure reliable health endpoints
# Copy this file to .env before starting locally or in CI.

# Networking
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
BROWSER=none
CHOKIDAR_USEPOLLING=false
WDS_SOCKET_PORT=0

# Memory and build flags
# Cap Node memory in low-memory CI and disable sourcemaps for less memory usage
NODE_OPTIONS=--max-old-space-size=256
REACT_APP_ENABLE_SOURCE_MAPS=false
GENERATE_SOURCEMAP=false

# Health endpoint path served statically (zero-bundle)
REACT_APP_HEALTHCHECK_PATH=/healthz.html

# Feature toggles and URLs (placeholders; override in real environments)
REACT_APP_API_BASE=
REACT_APP_BACKEND_URL=
REACT_APP_FRONTEND_URL=
REACT_APP_WS_URL=
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_TRUST_PROXY=false
REACT_APP_LOG_LEVEL=info
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=false
