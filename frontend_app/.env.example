# PUBLIC_INTERFACE
# This .env.example lists recommended environment variables for stable, low-memory
# operation in CI/containers to avoid exit code 137 (OOM) when running the React dev server.

# Server bind host and port
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000

# Stability flags: do not open browser, minimize file watching/polling
BROWSER=none
CHOKIDAR_USEPOLLING=false
WDS_SOCKET_PORT=0

# Disable source maps to reduce memory consumption
# You can override to true locally if you need debugging
REACT_APP_ENABLE_SOURCE_MAPS=false
GENERATE_SOURCEMAP=false

# Cap Node.js old space memory to avoid OOM kills in CI
NODE_OPTIONS=--max-old-space-size=256

# Healthcheck path; this file is created in public/healthz.html (zero-bundle)
REACT_APP_HEALTHCHECK_PATH=/healthz.html

# Optional: serve only static public/ folder (ultra-low memory)
# CI_STATIC_ONLY=1

# Optional app URLs (not required for dev server to run)
REACT_APP_API_BASE=
REACT_APP_BACKEND_URL=
REACT_APP_FRONTEND_URL=
REACT_APP_WS_URL=
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_TRUST_PROXY=false
REACT_APP_LOG_LEVEL=info
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=false
