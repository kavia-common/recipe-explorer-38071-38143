# PUBLIC_INTERFACE
# CI-safe defaults for stable dev server in containers (avoid OOM / exit 137)

# Network
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
BROWSER=none
CHOKIDAR_USEPOLLING=false
WDS_SOCKET_PORT=0

# Memory caps
# Note: CI should export NODE_OPTIONS if not using scripts that set it.
NODE_OPTIONS=--max-old-space-size=256

# Source maps off to save memory
REACT_APP_ENABLE_SOURCE_MAPS=false
GENERATE_SOURCEMAP=false

# Healthcheck
REACT_APP_HEALTHCHECK_PATH=/healthz.html

# Optional URLs for integration
REACT_APP_API_BASE=
REACT_APP_BACKEND_URL=
REACT_APP_FRONTEND_URL=
REACT_APP_WS_URL=
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_TRUST_PROXY=true
REACT_APP_LOG_LEVEL=info
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=0
