# PUBLIC_INTERFACE
# Example environment for stable CI/dev startup in low-memory containers.
# Copy to .env and adjust as needed.

# App URLs
REACT_APP_API_BASE=http://localhost:4000
REACT_APP_BACKEND_URL=http://localhost:4000
REACT_APP_FRONTEND_URL=http://localhost:3000
REACT_APP_WS_URL=ws://localhost:4000

# Runtime mode
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1

# Stability and memory safety
# Disable source maps to reduce memory usage during start/build
REACT_APP_ENABLE_SOURCE_MAPS=false
# Cap Node.js memory to avoid exit 137 (OOM)
NODE_OPTIONS=--max-old-space-size=256

# Network and server
REACT_APP_PORT=3000
REACT_APP_TRUST_PROXY=true
HOST=0.0.0.0
BROWSER=none
WDS_SOCKET_PORT=0
CHOKIDAR_USEPOLLING=false

# Logging and health
REACT_APP_LOG_LEVEL=info
REACT_APP_HEALTHCHECK_PATH=/healthz.html

# Feature flags
REACT_APP_FEATURE_FLAGS={}
REACT_APP_EXPERIMENTS_ENABLED=false

# Optional: serve static-only in CI to avoid bundling (zero-bundle)
# CI_STATIC_ONLY=1
