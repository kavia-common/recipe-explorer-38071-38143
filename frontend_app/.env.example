# PUBLIC_INTERFACE
# This example file provides safe, CI-friendly defaults to avoid exit code 137 (OOM)
# Copy to .env before running in CI:
#   cp .env.example .env
# Note: Do NOT commit a real .env; this example is safe and generic.

# Bindings
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
BROWSER=none
CHOKIDAR_USEPOLLING=false
WDS_SOCKET_PORT=0

# Memory and build flags
# Cap Node memory to keep dev server from being OOM-killed in tight CI
NODE_OPTIONS=--max-old-space-size=256
# Disable source maps to reduce memory usage
REACT_APP_ENABLE_SOURCE_MAPS=false
GENERATE_SOURCEMAP=false

# Health endpoint path (served from public/ without bundling)
REACT_APP_HEALTHCHECK_PATH=/healthz.html

# CI mode
CI=true

# Feature flags (placeholder to match container_env list)
REACT_APP_API_BASE=
REACT_APP_BACKEND_URL=
REACT_APP_FRONTEND_URL=
REACT_APP_WS_URL=
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_TRUST_PROXY=false
REACT_APP_LOG_LEVEL=info
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=false

# Static-only mode for extreme memory constraints:
# CI_STATIC_ONLY=1
