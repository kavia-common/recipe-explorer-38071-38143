# CI/Dev safe defaults to avoid exit code 137 (OOM) and unnecessary overhead
# Copy this file to .env for local dev and CI: cp .env.example .env

# Bind to all interfaces in containers
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000

# Do not open browser in CI
BROWSER=none

# Avoid polling overhead
CHOKIDAR_USEPOLLING=false

# Avoid websocket port negotiation issues inside containers
WDS_SOCKET_PORT=0

# Disable source maps to lower memory footprint
REACT_APP_ENABLE_SOURCE_MAPS=false
GENERATE_SOURCEMAP=false

# Cap Node memory
NODE_OPTIONS=--max-old-space-size=256

# Health endpoint path (zero-bundle)
REACT_APP_HEALTHCHECK_PATH=/healthz.html

# Optional flags
REACT_APP_NODE_ENV=development
REACT_APP_ENABLE_SOURCE_MAPS=false

# URLs (not used by this template but reserved for future)
REACT_APP_API_BASE=
REACT_APP_BACKEND_URL=
REACT_APP_FRONTEND_URL=
REACT_APP_WS_URL=
REACT_APP_TRUST_PROXY=true
REACT_APP_LOG_LEVEL=info
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=false
REACT_APP_NEXT_TELEMETRY_DISABLED=1
