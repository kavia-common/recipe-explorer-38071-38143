# CI-friendly defaults to avoid exit code 137 (OOM) and ensure health endpoints respond fast.

# Bindings
HOST=0.0.0.0
PORT=3000
REACT_APP_PORT=3000
BROWSER=none
CHOKIDAR_USEPOLLING=false
WDS_SOCKET_PORT=0

# Memory constraints for Node (adjust if CI is extremely tight)
NODE_OPTIONS=--max-old-space-size=256

# Disable source maps for lower memory and faster startup
REACT_APP_ENABLE_SOURCE_MAPS=false
GENERATE_SOURCEMAP=false

# Health endpoints
REACT_APP_HEALTHCHECK_PATH=/healthz.html

# Flags (not strictly required here, kept for compatibility)
REACT_APP_API_BASE=
REACT_APP_BACKEND_URL=
REACT_APP_FRONTEND_URL=
REACT_APP_WS_URL=
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_ENABLE_SOURCE_MAPS=false
REACT_APP_TRUST_PROXY=0
REACT_APP_LOG_LEVEL=info
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=0
